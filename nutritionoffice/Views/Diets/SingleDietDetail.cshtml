            <a href="javascript:void(0)" onclick="removeitemfrommeal(@dietdetailid,@mealid, @dayindex, @mealindex)"><span class="glyphicon glyphicon-remove-circle"> </span></a> <a href="javascript:void(0)" class="singledietitemclass" data-toggle="customtooltip" title="@ToolTipText" onclick="showfooddialog(@mealid, @dayindex, @mealindex, @foodid, @dietdetailid,'@foodname', @mealquantity,'@mealquantitytype',@groupindex )">@linktext</a>
