@model nutritionoffice.ViewModels.appointmentreminder


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.appointment.id)

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(modelitem => modelitem.appointment.CustomerID, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownList("CustomerID",null,htmlAttributes: new { @class = "form-control", @type = "text"} )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(modelitem=>modelitem.appointment.Date, htmlAttributes:new { @class="control-label col-md-3"})
                <div class="col-md-3">
                    @Html.EditorFor(modelitem => modelitem.appointment.Date, new { htmlAttributes = new { @class = "form-control", @type="text", @id="appointmentdatepicker" } })
                </div>
                @Html.LabelFor(modelitem => modelitem.appointment.FromTime, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2">
                    @Html.EditorFor(modelitem => modelitem.appointment.FromTime, new { htmlAttributes = new { @class = "form-control", @type = "text"} })
                </div>
                @Html.LabelFor(modelitem => modelitem.appointment.ToTime, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2">
                    @Html.EditorFor(modelitem => modelitem.appointment.ToTime, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(modelitem => modelitem.appointment.Notes, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(modelitem => modelitem.appointment.Notes, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <hr />
            <h3 class="text-center">Στοιχεία υπενθύμισης</h3>
            <div class="form-group">
                @Html.LabelFor(modelitem => modelitem.reminder.OnDate, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(modelitem => modelitem.reminder.OnDate, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "reminderdatepicker" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
