@model nutritionoffice.Models.Appointment


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(modelitem => modelitem.CustomerID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DropDownList("CustomerID",null,htmlAttributes: new { @class = "form-control", @type = "text"} )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(modelitem=>modelitem.Date, htmlAttributes:new { @class="control-label col-md-2"})
                <div class="col-md-5">
                    @Html.EditorFor(modelitem => modelitem.Date, new { htmlAttributes = new { @class = "form-control", @type="text", @id="appointmentdatepicker" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
