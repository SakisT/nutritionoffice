@model nutritionoffice.ViewModels.appointmentreminder


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.appointment.id)
        @Html.HiddenFor(model => model.reminder.id)
        @Html.HiddenFor(model => model.reminder.AppointmentID)
        @Html.HiddenFor(model => model.reminder.SMSState)
        @Html.HiddenFor(model => model.reminder.MailState)
        @Html.HiddenFor(model => model.appointment.CustomerID)
        @Html.HiddenFor(model => model.reminder.CustomerID)
        @Html.HiddenFor(model => model.appointment.State)
<div class="form-group">
    @Html.LabelFor(model => model.appointment.Customer, htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-9">

        @Html.DropDownList("appointment.CustomerID", (SelectList)ViewBag.CustomerID, Resource.SelectCustomer, htmlAttributes: new { @class = "form-control", id = "appointmentcustomer" })
    </div>
</div>

        <div class="form-group">
            @Html.LabelFor(model => model.appointment.Date, htmlAttributes: new { @class = "control-label col-md-3 " })
            <div class="col-md-9">
                <input type="text" name="appointment.Date" id="appointmentdatepicker" class="form-control" value="@Model.appointment.Date" style="background-color:#fcfbad;float:left;width:100px" />
                @Html.ValidationMessageFor(model => model.appointment.Date, "", new { @class = "text-danger" })

                <label class="control-label" style="float:left;width:45px;padding-left:10px;padding-right:5px;">@Resource.From</label>
                @Html.DropDownList("appointment.FromTime_Hour", (SelectList)ViewBag.FromHours, null, htmlAttributes: new { @class = "form-control", @style = "float:left;width:62px" })
                <div style="float:left;font-size:1.8em">:</div>
                @Html.DropDownList("appointment.FromTime_Minutes", (SelectList)ViewBag.FromMinutes, null, htmlAttributes: new { @class = "form-control", @style = "float:left;width:62px" })


                <label class="control-label" style="float:left;width:45px;padding-left:10px;padding-right:5px;">@Resource.to</label>
                @Html.DropDownList("appointment.FromTime_Hour", (SelectList)ViewBag.ToHours, null, htmlAttributes: new { @class = "form-control", @style = "float:left;width:62px" })
                <div style="float:left;font-size:1.8em">:</div>
                @Html.DropDownList("appointment.FromTime_Minutes", (SelectList)ViewBag.ToMinutes, null, htmlAttributes: new { @class = "form-control", @style = "float:left;width:62px" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.appointment.Notes, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.appointment.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.appointment.Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.reminder.Message, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.reminder.Message, new { htmlAttributes = new { @class = "form-control", @id = "appointmentmessage" } })
                @Html.ValidationMessageFor(model => model.reminder.Message, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.reminder.OnDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <input type="text" name="reminder.OnDate" id="reminderdatepicker" class="form-control" value="@Model.reminder.OnDate" style="background-color:#fcfbad;float:left;width:100px" />
                @Html.ValidationMessageFor(model => model.reminder.OnDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.reminder.SendEmail, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.reminder.SendEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.reminder.SendEmail, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.EditorFor(model => model.reminder.email, new { htmlAttributes = new { @class = "form-control", id = "remindon" } })
                @Html.ValidationMessageFor(model => model.reminder.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.reminder.SendSMS, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.reminder.SendSMS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.reminder.SendSMS, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                @Html.EditorFor(model => model.reminder.Mobile, new { htmlAttributes = new { @class = "form-control", id = "remindon" } })
                @Html.ValidationMessageFor(model => model.reminder.Mobile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3">
                <div class="row">
                    <div class="col-md-2">
                        <input type="submit" value="@Resource.Save" class="btn btn-default" />
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink(nutritionoffice.Resource.Delete, "Delete", new { id = Model.appointment.id }, htmlAttributes: new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
